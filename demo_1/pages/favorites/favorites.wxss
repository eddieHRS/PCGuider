/* pages/favorites/favorites.wxss */
.pic {
  align-self: center;
  margin-left: 16%;
  margin-right: 16%;
  padding: 20rpx;
  padding-left: 10%;
  padding-right: 10%;
  border-top: 2rpx solid silver;
}
.title-top {
  size: 80rpx;
  text-align: center;
  font-weight: bolder;
}
.title-sec {
  size: 60rpx;
  text-align: center;
  border-bottom: 2rpx solid silver; 
  font-weight: bolder;
}
.merchInfor-head {
  text-align: center;
  flex-direction: row; 
  align-items: center;
  padding: 20rpx;
  position: relative;
  overflow: hidden;
  margin-left: 5px;
  margin-right: 5px;
  background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.05));
  background-clip: padding-box;
}
.merchInfor {
  text-align: center;
  flex-direction: row; 
}
.brand {
  font-size: 30rpx;
  color: black;
  position: relative;
}
.type {
  font-size: 20rpx;
  color: gray;
}
.price {
  font-size: 40rpx;
  text-align: center;
  color: #b80000;
}
.card {
  border-bottom: 2rpx solid silver;
}
.icon-shangjiantou, icon-xiajiantou {
  align-items: center;
}
.merch-box {
  border-bottom: 2rpx solid silver;
  border-left: 2rpx solid silver;
  border-right: 2rpx solid silver;
  position: relative;
}
.tr-f {
  display: flex;
  width: 100%;
  height: 40rpx;
}
.td-1 {
    width:40%;
    text-align: left;
    padding-top: 15rpx;
}
.td-2 {
    width:60%;
    text-align: left;
    padding-top: 15rpx;
}